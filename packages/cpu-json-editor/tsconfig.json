{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": ["jest"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true
  },
  "include": ["src/**/*", "src/**/*.json"],
  "exclude": ["demos/**", "jest.config.ts", "__test__/**"]
}
